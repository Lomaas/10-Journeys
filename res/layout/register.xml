<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutRegister"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/testeurope"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRATION"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/regInformation"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="To be able to play you must registrate"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textRegUsername"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/eTextRegUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your name" >
    </EditText>

    <TextView
        android:id="@+id/regEmailView"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Email (optional):"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/eTextRegEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:inputType="textEmailAddress" >
    </EditText>

    <Button
        android:id="@+id/buttonConfirmReg"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bluee_button"
        android:onClick="postRegisterInfo"
        android:text="@string/register" />

    <TextView
        android:id="@+id/textRegUsername"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Already have an account?"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonToLogin"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bluee_button"
        android:onClick="toLoginActivity"
        android:text="@string/login" />

</LinearLayout>