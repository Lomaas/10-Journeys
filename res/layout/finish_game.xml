<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutFinishedGame1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/testeurope"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textActionFinishGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="30dp"
        android:textColor="@color/light_blue" />

    <TextView
        android:id="@+id/textWinnerRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner route:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <GridView
        android:id="@+id/MyGrid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="5dp"
        android:numColumns="5"
        android:padding="1dp"
        android:stretchMode="columnWidth" >
    </GridView>

    <TextView
        android:id="@+id/textShowStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textTotalGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textTotalWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textTotaLoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textWinPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonAddToFriendList"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bluee_button"
        android:onClick="addToFriendList"
        android:padding="10dip" />

    <Button
        android:id="@+id/buttonFindByUsername"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bluee_button"
        android:onClick="startNewGame" />

</LinearLayout>