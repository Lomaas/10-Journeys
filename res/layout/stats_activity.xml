<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/testeurope"
    android:orientation="horizontal"
    android:padding="5dip" >

    <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar" >
    </com.markupartist.android.widget.ActionBar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button1"
        android:orientation="vertical"
        android:padding="20dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bluee_button"
            android:drawableLeft="@drawable/rank"
            android:gravity="left|center_vertical"
            android:onClick="goToHighScoreActivity"
            android:padding="10dp"
            android:text="Highscore" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bluee_button"
            android:drawableLeft="@drawable/stat"
            android:gravity="left|center_vertical"
            android:onClick="goToOpponentStatsActivity"
            android:padding="10dp"
            android:text="Stats vs your friends" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bluee_button"
            android:drawableLeft="@drawable/singlescore"
            android:gravity="left|center_vertical"
            android:onClick="goToHighestScoreActivity"
            android:padding="10dp"
            android:text="Highest single score" />
    </LinearLayout>

</RelativeLayout>